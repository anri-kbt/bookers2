
  <h2 class="mt-3">User info</h2>
  <%=form_with model: @user do |f|%>

  <div class="field">
  <label for="name">Name</label><br/>
    <%= f.text_field :name %>
  </div>
      
  <div class="field">
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="field">
    <label for="introduction">Introduction</label><br/>
      <%=f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit "Update User",class:"btn btn-success"%>
  </div>
      
  <%end%>
