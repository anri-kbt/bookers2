<div class="col-md-3">
  <h2>User Info</h2>
  <% if user.image %>
    <%= image_tag book.user.get_profile_image(63,63) %>
  <% else %>
    <%= image_tag "assets/images/no_image.jpg" %>
  <% end %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%=books.user.name%></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%=link_to edit_user_path,class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
  </div>
  <h2 class="mt-3">New book</h2>
  <%=form_with model: book,url:'/books',method: :post do |f|%>

  <% if book.errors.any? %>
    <%=book.errors.count %>error prohibited this book from being saved:<br/>
    <ul>
    <%book.errors.full_messages.each do |message|%>
      <li><%=message%></li>
    <%end%>
    </ul>
  <%end%>

  <div class="field">
    <label for="book_title">Title</label><br/>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_opinion">Opinion</label><br/>
    <%=f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "Create Book",class:"btn btn-success"%>
  </div>
  <%end%>

</div>
