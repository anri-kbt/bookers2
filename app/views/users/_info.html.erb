    
      <h2>User Info</h2>
      <% if user.profile_image.attached? %>
        <%= image_tag user.get_profile_image(63,63) %>
      <% else %>
        <%#= image_tag 'app/assets/images/no_image.jpg' %>
      <% end %>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%=user.name%></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%=link_to edit_user_path(user) ,class:"btn btn-outline-secondary btn-block fas fa-user-cog"%>
      </div>
      <h2 class="mt-3">New book</h2>
      <%=form_with model: books,url:'/books',method: :post do |f|%>

      <%# if books.errors.any? %>
        <%#=books.errors.count %><%#error prohibited this book from being saved:%><br/>
        <ul>
        <%#books.errors.full_messages.each do |message|%>
          <li><%#=message%></li>
        <%#end%>
        </ul>
      <%#end%>

      <div class="field">
        <label for="book_title">Title</label><br/>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <label for="book_opinion">Opinion</label><br/>
        <%=f.text_area :body %>
      </div>

      <div class="actions">
        <%= f.submit "Create Book",class:"btn btn-success"%>
      </div>
      <%end%>

