<div class="container px-5 px-sm-0">
  <div class="row">
    <!--部分テンプレート-->
　　<%= render 'users/info', books: @books,user:@user %>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%@books.each do |book| %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% if user.image %>
                <%= image_tag book.user.get_profile_image(40,40) %>
              <% else %>
                <%= image_tag "assets/images/no_image.jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path%>
              <span><%=books.title%></span>
            </td>
            <td>
              <span><%=books.body%></span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>



<%end%>

