<div class="container px-5 px-sm-0">
  <div class="row">
    <!--部分テンプレート-->
    <div class="col-md-3">
　　<%= render 'users/info', books: @books,user: @user %>
　　<!--Bookの詳細画面-->
　　</div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <% @books.each do |book| %>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(40,40) %>
              <%= user_name%>
            </td>
            <td>
              <%= link_to book_path%>
              <span><%=books.title%></span>
            </td>
            <td>
              <span><%=books.body%></span>
            </td>
            <td>
            <% if @user.id == @current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book) %> </td>
            <td><%= link_to 'delete', books_path, method: :delete %></td>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <%end%>
    </div>
  </div>
</div>
